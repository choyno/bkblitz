
<div class="span7" id="reset-left" >
<h4 class="span3" id="reset-left" >Listing products</h4>
<div class="pull-right">
<% if @show_to_admin_only %>
  <%= link_to '+ add new products', new_admin_product_path, class: "btn reset-top-button btn-primary btn-mini" %>
<% end %>
</div>

</div>
<table class="table table-striped table-condensed " id="products">
  <tr>
    <th>Name</th>
    <th>Supplier</th>
    <th>Wholesale price</th>
    <th>Retail price</th>
    <th>Description</th>
    <% if @show_to_admin_only %>
      <th>Options</th>
      <th></th>
    <% end %>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.supplier.present? ? product.supplier.name : " " %></td>
    <td><%= product.wholesale_price %></td>
    <td><%= product.retail_price %></td>
    <td><%= product.description %></td>
    <% if @show_to_admin_only %>
			<td>
				<%= link_to 'show', [:admin, product], class: "btn btn-primary btn-mini" %>
				<%= link_to 'edit', edit_admin_product_path(product), class: "btn btn-mini" %>
			</td>
		<% end %>
  </tr>
<% end %>
</table>


<br />

