<%=  simple_form_for([:admin, @product], :html => {:id => 'product_form' }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
			<ul>
				<% @product.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
    </div>
  <% end %>


	<div class="form-horizontal"> 
		<div class="inner-well">

			<div class="control-group">
				<label class="control-label" >*Supplier name</label>
				<div class="controls">
					<%= f.input_field :supplier_id, collection: get_option(Supplier.all),
																					prompt: "Select Supplier",  id: "product_supplier"%>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" >*Product name</label>
				<div class="controls">
          <%= f.input_field :name, placeholder:'Product name', rows: '6', style: 'width: 80%;' %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" >*Wholesale Price</label>
				<div class="controls">
					<%= f.input_field :wholesale_price, placeholder: "Wholesale price" %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" >*Retail Price</label>
				<div class="controls">
					<%= f.input_field :retail_price, placeholder: "Retail price" %>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label" >Description</label>
				<div class="controls">
          <%= f.input_field :description, placeholder:'Product Description', rows: '6', style: 'width: 80%;' %>
				</div>
			</div>

			<div class="actions">
				<%= f.submit "Save", class:"btn btn-primary" %>
				<%= link_to 'back', admin_products_path, class:"btn" %>
			</div>


		</div>
	</div>
<% end %>
